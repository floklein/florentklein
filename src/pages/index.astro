---
import { Chat } from "@/components/Chat";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import profileImage from "../assets/profile.png";

const projects = [
  {
    name: "great minds",
    description: "Real-time party game to play with friends.",
    url: "https://greatminds.gg/",
    tags: [
      "Vite",
      "WebSocket",
      "Ant Design",
      "Colyseus",
      "Motion",
      "TanStack Query",
    ],
  },
  {
    name: "Artguessr",
    description: "Educative game about finding the date of an artwork.",
    github: "https://github.com/floklein/artguessr",
    url: "https://artguessr.florentklein.dev/",
    tags: ["Next.js", "Tailwind", "Shadcn", "Zod"],
  },
  {
    name: "kAI",
    description: "AI client for Chrome-integrated Gemini Nano.",
    github: "https://github.com/floklein/kai",
    tags: ["Vite", "Tailwind", "Shadcn", "Dexie", "TanStack Router"],
  },
  {
    name: "HALP!",
    description: "Social app around polls for iOS, Android and web.",
    github: "https://github.com/floklein/halp",
    url: "https://halp.florentklein.dev/",
    tags: ["React Native", "Expo", "PostgreSQL", "Drizzle", "BetterAuth"],
  },
  {
    name: "florentklein.dev",
    description: "This very website.",
    github: "https://github.com/floklein/florentklein",
    url: "https://florentklein.dev/",
    tags: ["Astro", "Tailwind"],
  },
];
---

<Layout>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-16">
    <header class="flex justify-between items-center mb-8 sm:mb-16 lg:mb-32">
      <a href="/" class="text-xl sm:text-2xl">Florent Klein</a>
      <nav class="flex gap-2 sm:gap-4 lg:gap-6">
        <a
          href="mailto:florentklein42@gmail.com"
          class="text-lg sm:text-xl text-muted-foreground hover:text-foreground"
          >Email</a
        >
        <span class="text-muted-foreground">•</span>
        <a
          href="https://www.linkedin.com/in/florentklein/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-lg sm:text-xl text-muted-foreground hover:text-foreground"
          >CV</a
        >
        <span class="text-muted-foreground">•</span>
        <a
          href="https://www.dametis.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-lg sm:text-xl text-muted-foreground hover:text-foreground"
          >Work</a
        >
      </nav>
    </header>
    <main
      class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-16 items-end mb-12 sm:mb-14 lg:mb-16"
    >
      <div class="space-y-8 sm:space-y-10 lg:space-y-12">
        <hr class="w-full border-t border-foreground" />
        <h1
          class="text-3xl sm:text-4xl lg:text-5xl font-medium leading-tight font-serif"
        >
          Frontend lead, React expert and passionate developer.
        </h1>
        <p class="text-lg sm:text-xl lg:text-2xl">
          I'm Florent, the current frontend lead at Dametis, building a
          greentech SaaS to help companies reduce their carbon footprint.
        </p>
        <div>
          <Chat client:load />
        </div>
        <div class="flex gap-4 items-center">
          <a
            href="https://www.linkedin.com/in/florentklein/"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg
              class="w-6 h-6"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
          <a
            href="https://github.com/floklein"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg
              class="w-7 h-7"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
      <div class="relative">
        <Image
          src={profileImage}
          alt="Profile photo"
          class="w-full"
          width={600}
          height={800}
        />
      </div>
    </main>
    <hr class="w-full border-t border-foreground mb-12 sm:mb-14 lg:mb-16" />
    <section class="mb-12 sm:mb-14 lg:mb-16">
      <h2
        class="text-2xl sm:text-3xl lg:text-4xl font-medium mb-4 sm:mb-6 font-serif"
      >
        Projects
      </h2>
      <p class="text-lg sm:text-xl text-muted-foreground mb-8">
        A selection of personal projects I've built using React and TypeScript,
        and deployed using Coolify.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          projects.map((project) => (
            <div class="space-y-4">
              <h3 class="text-xl sm:text-2xl font-medium mb-2 sm:mb-3 lg:mb-4">
                {project.name}
              </h3>
              <p class="text-lg text-muted-foreground mb-2 sm:mb-3 lg:mb-4">
                {project.description}
              </p>
              <p class="flex flex-wrap gap-2 mb-2 sm:mb-3 lg:mb-4">
                {project.tags &&
                  project.tags.map((tag) => (
                    <span class="px-3 py-1 text-sm bg-muted-foreground/10 rounded-full">
                      {tag}
                    </span>
                  ))}
              </p>
              <div class="flex gap-4">
                {project.github && (
                  <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span>GitHub</span>
                  </a>
                )}
                {project.url && (
                  <a
                    href={project.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                    <span>Visit</span>
                  </a>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </section>
    <hr class="w-full border-t border-foreground mb-12 sm:mb-14 lg:mb-16" />
  </div>
</Layout>
